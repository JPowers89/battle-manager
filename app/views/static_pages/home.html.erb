<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <%= form_for(:combat, url: combats_path, html: { class: "navbar-form navbar-left form-inline"}) do |f| %>
        <%= f.submit 'Start Combat', disabled: true, class: "btn btn-outline-secondary" %>
      <% end %>
      <%= form_for(:session, url: login_path, html: { class: "navbar-form navbar-right form-inline" }) do |f| %>
        <div class="form-group">
          <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: "Password", class: "form-control"  %>
        </div>
        <!--<div class="checkbox">
          <%= f.check_box :remember_me %><%= f.label :remember_me %>
        </div>-->
        <%= f.submit 'Login', class: "btn btn-default" %>
        <%= link_to "Register", register_path, data: { remote: true, toggle: "modal", target: "registerModal" } %>
      <% end %>
    </nav>
  </div>
</header>

<div class="center jumbotron">
  <h1>Welcome to Combat Master</h1>

  <h2>
    Combat Master is a web-based initiative tracker for Pathfinder.
  </h2>

  <h3>With Combat Master, you can track basic details about PC's and Monsters quickly and easily.</h3>
</div>
