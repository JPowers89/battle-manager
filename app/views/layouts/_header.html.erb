<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <% if logged_in? %>
        <% if current_page?(root_path) %>
          <%= form_for(:combat, url: combats_path, html: { class: "navbar-form navbar-left form-inline"}) do |f| %>
            <%= f.submit 'Start Combat', class: "btn btn-outline-secondary" %>
          <% end %>
        <% else %>
          <form class="navbar-form navbar-left form-inline">
            <%= render 'combats/core_button_group' %>
          </form>
        <% end %>
        <form class="navbar-form navbar-right form-inline">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= gravatar_for current_user, size: 20 %>
              <%= current_user.username %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        </form>
      <% else %>
        <%= form_for(:combat, url: combats_path, html: { class: "navbar-form navbar-left form-inline"}) do |f| %>
          <%= f.submit 'Start Combat', disabled: true, class: "btn btn-outline-secondary" %>
        <% end %>
        <%= form_for(:session, url: login_path, html: { class: "navbar-form navbar-right form-inline" }) do |f| %>
          <div class="form-group">
            <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, placeholder: "Password", class: "form-control"  %>
          </div>
          <!--<div class="checkbox">
            <%= f.check_box :remember_me %><%= f.label :remember_me %>
          </div>-->
          <%= f.submit 'Login', class: "btn btn-default" %>
          <%= link_to "Register", register_path, data: { remote: true, toggle: "modal", target: "registerModal" } %>
        <% end %>
      <% end %>
    </nav>
  </div>
</header>
